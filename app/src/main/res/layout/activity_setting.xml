<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobilesafe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.example.mobilesafe.activities.SettingActivity">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>

    <cn.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:title="自动更新设置"
        mobilesafe:desc_on="自动更新已开启"
        mobilesafe:desc_off="自动更新已关闭"
        >
    </cn.example.mobilesafe.view.SettingItemView>

    <cn.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc_off="归属地显示已经关闭"
        mobilesafe:desc_on="归属地显示已经开启"
        mobilesafe:title="电话归属地显示设置"
        >
    </cn.example.mobilesafe.view.SettingItemView>

    <cn.example.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </cn.example.mobilesafe.view.SettingClickView>

    <cn.example.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </cn.example.mobilesafe.view.SettingClickView>
</LinearLayout>
