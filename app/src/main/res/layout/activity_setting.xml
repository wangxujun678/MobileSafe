<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobilesafe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.example.mobilesafe.activities.SettingActivity">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>

    <cn.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:title="自动更新设置"
        mobilesafe:desc_on="自动更新已开启"
        mobilesafe:desc_off="自动更新已关闭"
        >

    </cn.example.mobilesafe.view.SettingItemView>
</LinearLayout>
